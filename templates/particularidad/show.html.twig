{% extends 'base.html.twig' %}

{% block title %}Ver {{ particularidad.nombre }}{% endblock %}

{% block body %}
    <br/>
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{ routes[0] }}</li>
        <li class="breadcrumb-item">{{ routes[1] }}</li>
        <li class="breadcrumb-item">
            <a class="normal" href="{{ path('particularidad_index') }}">{{ routes[2] }}</a>
        </li>
        <li class="breadcrumb-item activo">{{ routes[3] }}</li>
    </ol>
    <h1>Particularidad</h1>
    {{ include('admin/errors.html.twig') }}
    <table class="table table-hover">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ particularidad.id }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Nombre</th>
            <td>{{ particularidad.nombre }}</td>
        </tr>
        <tr>
            <th>Siglas</th>
            <td>{{ particularidad.siglas }}</td>
        </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') and particularidad.activo==1 %}
        <a href="{{ path('particularidad_edit', { 'id': particularidad.id }) }}"
           class="btn btn-warning text-white btn-block"><i class="fa fa-fw fa-edit"></i>&nbsp;Editar</a>
        {{ include('particularidad/_delete_form.html.twig') }}
    {% endif %}
    <button onclick="goBack()" class="btn btn-secondary btn-block text-white">Atr&aacute;s</button>
{% endblock %}

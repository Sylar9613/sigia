{% extends 'base.html.twig' %}

{% block title %}Ver situaci&oacute;n del combustible{% endblock %}

{% block body %}
    <br/>
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{ routes[0] }}</li>
        <li class="breadcrumb-item">{{ routes[1] }}</li>
        <li class="breadcrumb-item">
            <a class="normal" href="{{ path('combustible_index') }}">{{ routes[2] }}</a>
        </li>
        <li class="breadcrumb-item activo">{{ routes[3] }}</li>
    </ol>
    <h1>Situaci&oacute;n del combustible</h1>
    {{ include('admin/errors.html.twig') }}
    <table class="table table-hover">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ combustible.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Evaluaci&oacute;n</th>
                <td>{{ combustible.evaluacion }}</td>
            </tr>
            <tr>
                <th>Da&ntilde;o Econ&oacute;mico CUP</th>
                <td>{{ combustible.danoEconomicoCup ? combustible.danoEconomicoCup : '-' }}</td>
            </tr>
            <tr>
                <th>Da&ntilde;o Econ&oacute;mico en otra moneda</th>
                <td>{{ combustible.danoEconomicoOtraMoneda ? combustible.danoEconomicoOtraMoneda : '-' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') and combustible.activo==1 %}
        <a href="{{ path('combustible_edit', { 'id': combustible.id }) }}"
           class="btn btn-warning text-white btn-block"><i class="fa fa-fw fa-edit"></i>&nbsp;Editar</a>
        {{ include('combustible/_delete_form.html.twig') }}
    {% endif %}
    <button onclick="goBack()" class="btn btn-secondary btn-block text-white">Atr&aacute;s</button>
{% endblock %}

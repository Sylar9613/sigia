<script>
    function mostrarPath() {
        var auditorPath = auditor_imagen.value.substr(12);
        var path = /\./g;
        var last = 0;
        while (path.test(auditorPath)===true)
        {
            last = path.lastIndex;
        }
        var validacion = auditorPath.substr(last, auditorPath.length-last);
        var spanUpload = document.getElementById('span-upload');
        if (auditorPath===''){
            spanUpload.innerHTML = "Ning√∫n archivo seleccionado.";
        }
        else {
            spanUpload.innerHTML = auditorPath;
        }
        if (validacion === 'jpeg' || validacion === 'jpg' || validacion === 'png' || validacion === 'JPEG' || validacion === 'JPG' || validacion === 'PNG'){
            $('#req-image').addClass('collapse');
        }
        else {
            var spanImage = document.getElementById('span-image');
            $('#req-image').removeClass('collapse');
            spanImage.innerHTML = "El formato del archivo no es correcto (jpg o png)";
        }
    }


{% extends 'base.html.twig' %}

{% block title %}Ver {{ nivel.nombre }}{% endblock %}

{% block body %}
    <br/>
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{ routes[0] }}</li>
        <li class="breadcrumb-item">
            <a class="normal" href="{{ path('nivel_index') }}">{{ routes[1] }}</a>
        </li>
        <li class="breadcrumb-item activo">{{ routes[2] }}</li>
    </ol>
    <h1>Nivel</h1>
    {{ include('admin/errors.html.twig') }}
    <table class="table table-hover">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ nivel.id }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Nombre</th>
            <td>{{ nivel.nombre }}</td>
        </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') and nivel.activo==1 %}
        <a href="{{ path('nivel_edit', { 'id': nivel.id }) }}"
           class="btn btn-warning text-white btn-block"><i class="fa fa-fw fa-edit"></i>&nbsp;Editar</a>
        {{ include('nivel/_delete_form.html.twig') }}
    {% endif %}
    <button onclick="goBack()" class="btn btn-secondary btn-block text-white">Atr&aacute;s</button>
{% endblock %}
